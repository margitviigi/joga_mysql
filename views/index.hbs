<h1>Articles</h1>

<div class="articles-list">
    {{#articles}}
    <article class="article-card">
        <img src="/images/{{image}}" alt="{{name}}">
        <h2>{{name}}</h2>
        <p>{{body}}</p>
        <div class="article-actions">
            <a href="/article/{{slug}}" class="read-more">Read More</a>
            {{#if user}}
            <a href="/article/edit/{{id}}" class="btn-edit">Edit</a>
            <a href="/article/delete/{{id}}" class="btn-delete">Delete</a>
            {{/if}}
        </div>
    </article>
    {{/articles}}
</div>